body
	background lgm-purple
	color lb-slate
	font-family lightbend-fonts
	text-rendering optimizeLegibility
.off-canvas-content
	position relative
	background: lgm-purple
	@media menu-break-point-small
		background: lgm-purple url("images/ui/lagom-hero.png") no-repeat
		background-position: center top 40px
		background-attachment: fixed

@media screen and (min-width: 40em)
	.columns
		padding: 0 1.5em

.fw-wrapper
	padding: 60px 0px
	background: white
	&.flush
		padding: 0
	&.flush-top
		padding: 0 0 60px 0
	&.flush-bottom
		padding: 60px 0 0 0
	&.white
		background: white
	&.lb-off-white
		background: lb-off-white
	&.lb-off-white-dkr
		background: lb-off-white-dkr
	&.lb-light-grey-ltr
		background: lb-light-grey-ltr
	&.lb-grey
		background: lb-grey
		h1,h2,h3,h4,h5,h6,p
			color: white
	&.lb-grey-dkr
		background: lb-grey-dkr
		h1,h2,h3,h4,h5,h6,p
			color: white
	&.lgm-purple
		background: lgm-purple
		h1,h2,h3,h4,h5,h6,p
			color: white
			a
				color: white
		a:link, a:visited
			color: lb-light-grey-dkr
		a:hover
			color: lgm-purple-ltr
	&.lgm-purple-dkr
		background: lgm-purple-dkr
		h1,h2,h3,h4,h5,h6,p
			color: white
	&.lb-slate
		background: lb-slate
		h1,h2,h3,h4,h5,h6,p
			color: white
	&.lb-slate-dkr
		background: lb-slate-dkr
		h1,h2,h3,h4,h5,h6,p
			color: white
	&.lb-slate-ltr
		background: lb-slate-ltr
		h1,h2,h3,h4,h5,h6,p
			color: white
	&.hero-banner
		padding: 60px 0 80px 0
		@media menu-break-point-small
			padding: 20px 0 80px 0
		background: transparent
		br
			display: none
		@media screen and (min-width: 40em)
			br
				display: block
		h1
			color: white
			font-size: 2em
			line-height: 1.25em
			margin: 0
			font-weight: 700
		.logo
			width: 200px
			display: block
			margin-bottom: 10px
	&.hero-banner-home
		h1
			margin-bottom: .5rem
			font-size: 2.5rem
		h2
			font-size: 1.5rem
			font-weight: 400
			margin-bottom: 1.25rem
	&.home-content
		border-top: 2px solid white
		background: lb-light-grey-ltr url("images/ui/lagom-hexagon-repeat-fade.png") repeat-x center top
		h1
			font-weight: 700
			font-size: 2.25em
			color: lgm-purple
	&.page-title
		padding: 40px 0 62px 0
		@media menu-break-point-small
			padding: 0 0 62px 0
		background: transparent
		br
			display: none
		@media screen and (min-width: 40em)
			br
				display: block
		h1
			color: white
			font-size: 2em
			line-height: 1.25em
			margin: 0
			font-weight: 700

.home-blog-listing
	@media screen and (min-width: 40em)
		background: lb-off-white-dkr url("images/ui/lagom-hero-white.png") no-repeat
		background-position: center top
	header
		margin-bottom: 1rem

.home-sponsors-listing
	border: 0 solid lb-grey
	border-bottom: 1px solid lb-grey
	img
		width: 250px
		height: 50px
	header
		margin-bottom: 1rem

.navbar
	background-color white
	height 100px
	display: none
	@media menu-break-point-small
		display: block		
	.logo
		float: right
		@media menu-break-point-small
			float: left
		display: inline-block
		margin-top: 25px
		.svg-logo
			height: 36px
			margin-top: 2px
			@media menu-break-point-small
				height: 34px
				margin-top: 8px
			@media menu-break-point-medium
				height: 44px
				margin-top: 0

	.sections
		float right
		border-right solid 1px lb-light-grey
		a
			display block
			float left
			border-left solid 1px lb-light-grey
			color lgm-purple-dkr
			height 100px
			line-height 70px
			padding 15px
			font-size 14px
			font-weight 700
			text-transform uppercase

		a:hover
			background lb-off-white
			color lgm-purple-dkr
			text-decoration none
			box-shadow inset 0 4px 0 lgm-purple, inset 0 0 3px lb-off-white-dkr
			transition anime

.small-menu
	display: flex
	justify-content: flex-start
	align-items: stretch
	.menu-icon
		width: 30px
		height: 30px
		vertical-align: top
		margin-top: 25px
		&:after
			background: lgm-purple
			box-shadow: 0 14px 0 lgm-purple,0 28px 0 lgm-purple
		.stuck &
			margin-top: 14px
			&:after
				background: white
				box-shadow: 0 10px 0 white,0 20px 0 white
	.logo
		padding-left: 20px
		margin-left: 20px 
		height: 80px
		border-left: 1px solid lb-light-grey
		display: inline-block
		> span
			height: 80px
			width: 150px
			display: inline-block
			background: transparent url("images/logos/lagom-full-color.svg") no-repeat center center
			background-size: contain
		.stuck &
			height: header-height
			border-left: 1px solid rgba(lgm-purple-ltr, .5)
			> span
				background-image: url("images/logos/lagom-reverse.svg")
				height: header-height
				width: 130px
			@media menu-break-point-small
				border-left: none
				padding: 0
				margin: 0
	.sections-scroll
		display: none
		a
			color: white
			text-transform: uppercase
			margin: 0 5px
			line-height: 38px
			padding: 5px
			display: inline-block
			font-weight: 400
			&:hover
				color: lgm-purple-ltr
	.social
		display: none
	@media menu-break-point-small
		justify-content: flex-end
		.stuck &
			justify-content: space-between
		.menu-icon
			display: none
		.logo
			display: none
			.stuck &
				height: header-height
				> span
					height: header-height
				display: inline-block
		.sections-scroll
			display: none
			.stuck &
				display: inline-block
		.social
			display: inline-block


.sticky-bar
	background: rgba(white,1)
	height: 80px
	box-shadow: 0 0 8px rgba(black,.5)
	width: 100%
	z-index: 100
	@media menu-break-point-small
		background: rgba(lgm-purple,0)
		position: relative
		box-shadow: 0 0 8px rgba(black,0)
		top: 0
		width: 100%
		z-index: 100
	&.stuck
		background: rgba(lgm-purple,1)
		height: header-height
		position: fixed
		box-shadow: 0 0 8px rgba(black,.5)
		top: 0
		left: 0
		width: 100%
		z-index: 100
		.social
			display: none
			padding: 10px 0 10px 0
		@media menu-break-point-medium
			.social
				display: block


	


.off-canvas
	background: transparent
	nav
		a
			color white
			text-align left
			display block
			padding 1em
			margin-bottom 1px
			background-color rgba(lgm-purple-dkr, .6)
		h3
			color white
			font-weight 700
			font-size 1.25em
			padding 1em
			margin 0

		ul, li
			padding 0
			margin 0
			list-style-type none




.noios .off-canvas nav a:hover
	background-color: rgba(lgm-purple-dkr, 1)

.close-button
	font-size: 2.5em
	color: lb-off-white-dkr
	padding-right: .5rem
	padding-left: .5rem
	right: .5rem
	&:hover
		color: white

.js-off-canvas-exit
	background-color: hsla(0,0%,100%,.35)

.get-started
	padding-top: 60px
	& + .row
		margin-top: 20px
		@media screen and (min-width: 40em)
			margin-top: 30px
		@media screen and (min-width: 64em)
			margin-top: 40px

.title
	.large-lagom-logo
		float left
		width 300px
		height 150px
		padding-right 20px
	font-size 40px
	font-weight 700
	color white

.lagom-intro
	clear both
	margin-left auto
	margin-right auto
	width 640px

.flex-video
	box-shadow: shadow
	iframe
		border: 4px solid white

.inset-icons
	p
		padding-left: 50px
	h2::before
		border: 0px solid red
		content: ''
		width: 50px
		height: 50px
		margin-right: 5px
		margin-left: -7px
		margin-bottom: -12px
		display: inline-block
		background: transparent url("images/ui/involved.png") no-repeat left top
		background-size: 100%
		background-position: 0 4px
	h2.stack::before
		background-position: 0 -200px
	h2.bug::before
		background-position: 0 -98px
	h2.patch::before
		background-position: 0 -147px
	@media screen and (min-width: 1300px)
		h2::before
			margin-left: -55px
		p
			padding-left: 0

footer
	ul
		margin-left: 0
		list-style: none
	a, a:link, a:visited
		color: lb-light-grey-dkr
		font-weight: 700
	a:hover
		color: lgm-purple-ltr
		text-decoration: none
	.support
		h3
			font-size: 1.125em
			font-weight: 700
			text-transform: uppercase
			margin: 8px 0 0 0
		.svg-icon-chat, .svg-icon-lb-icon-reverse
			width: 60px
			height: 60px
			float: left
			margin-right: 1em
		ul li
			display: inline
			margin-right: 10px
	.links
		h3
			font-size: 1.25em
			font-weight: 700
			border-bottom: 1px solid rgba(white,.3)
			display: block
			padding: 0px 10px 10px 0px
	.credits
		padding: 40px 0
		p
			margin: 0
			font-size: .85em
		.logo img
			height: 30px
			margin-right: 40px
		.partner img
			height: 30px
	.lb-legal
		padding-top: 4rem
			
 
